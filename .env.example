# K2 Market Data Platform - Environment Configuration
# Copy this file to .env and customize for your environment
# All values shown are defaults - override as needed

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Deployment environment: local, test, staging, production
K2_ENVIRONMENT=local

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
# Kafka bootstrap servers (comma-separated for multiple brokers)
# Local: localhost:9092
# Docker: kafka:29092
K2_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Confluent Schema Registry URL for Avro schema management
K2_KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081

# =============================================================================
# ICEBERG CONFIGURATION
# =============================================================================
# Iceberg REST catalog URI
K2_ICEBERG_CATALOG_URI=http://localhost:8181

# S3/MinIO endpoint URL
# Local MinIO: http://localhost:9000
# Production S3: https://s3.amazonaws.com
K2_ICEBERG_S3_ENDPOINT=http://localhost:9000

# S3/MinIO access credentials
K2_ICEBERG_S3_ACCESS_KEY=admin
K2_ICEBERG_S3_SECRET_KEY=password

# Iceberg warehouse location (S3 bucket path)
K2_ICEBERG_WAREHOUSE=s3://warehouse/

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# PostgreSQL host
K2_DB_HOST=localhost

# PostgreSQL port
K2_DB_PORT=5432

# PostgreSQL username
K2_DB_USER=iceberg

# PostgreSQL password
K2_DB_PASSWORD=iceberg

# PostgreSQL database name
K2_DB_DATABASE=iceberg_catalog

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API key for authentication
K2_API_KEY=k2-dev-api-key-2026

# API rate limit per minute per API key
K2_API_RATE_LIMIT=100

# API logging level
K2_API_LOG_LEVEL=INFO

# =============================================================================
# OBSERVABILITY CONFIGURATION
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
K2_OBSERVABILITY_LOG_LEVEL=INFO

# Prometheus metrics port
K2_OBSERVABILITY_PROMETHEUS_PORT=9090

# Enable Prometheus metrics collection
K2_OBSERVABILITY_ENABLE_METRICS=true

# =============================================================================
# QUERY ENGINE CONFIGURATION
# =============================================================================
# Query memory limit
K2_QUERY_MEMORY_LIMIT=1GB

# Query timeout in seconds
K2_QUERY_TIMEOUT_S=30

# Hybrid query max messages from Kafka
K2_HYBRID_QUERY_MAX_MESSAGES=1000

# =============================================================================
# NOTES
# =============================================================================
# - All K2_ prefixed variables override default values
# - Boolean values: true/false (case insensitive)
# - URLs should not have trailing slashes (auto-removed)
# - Sensitive values (passwords, keys) should be managed via secrets management
#   in production (AWS Secrets Manager, HashiCorp Vault, etc.)
